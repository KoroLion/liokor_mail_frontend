@require 'constants.styl'

indent = 15px

.popup-messages
    color #202020
    position fixed
    top indent
    right indent
    width 225px
    z-index 1000
    .popup-message
        margin-bottom indent
        padding 10px
        border-radius 2px
        background-color #28A745
        border-left 5px solid #218838
        color textColor1
        transition opacity 0.5s ease
        .title
            margin-bottom 5px
    .popup-message.error
        background-color #E54D42
        border-left-color #B82E24
