color1 = #F5F5F5
color2 = #CCC
color3 = #AAA
color4 = #888
color5 = #585858
color6 = #333
color7 = #222

dialogue-color = #185d25AA
dialogue-color-hover = #218633
dialogue-color-active = #6b5c13

plus-bg-color = #21863322
confirm-bg-color = #21863355

bg-color-1 = #60606099
bg-color-2 = #393C3FCC
bg-color-3 = #3b3f4799
bg-color-4 = #393939

message-bg-1 = #3f444c
message-bg-2 = #3f4a3f

extra-small = 5px
small = 7px
middle = 10px
large = 20px
extra-large = 30px

small-avatar-size = 20px
middle-avatar-size = 40px
large-avatar-size = 60px

dialogue-preview-height = 62px

dialogues-column-width = 30%
messages-column-width = 100% - dialogues-column-width

width-border = 1px

.middle-avatar
  border-radius 50%
  width middle-avatar-size
  height middle-avatar-size
  overflow hidden

