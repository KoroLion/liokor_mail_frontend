.bg-transparent
  background bg-color-2

.text-1
  color color1
.text-2
  color color2
.text-3
  color color3
.text-4
  color color4

.fullwidth
  width 100%
.fullheight
  height 100%

.floatright
  float right
.floatleft
  float left

.p-m
  padding middle
.p-l
  padding large

.center-text
  text-align center

// --- Table:
.table-columns
  overflow hidden
  display flex
  flex-direction row
.table-rows
  overflow hidden
  display flex
  flex-direction column

.table-column
  height 100%
  padding middle 0 middle 0
.table-row
  width 100%
  padding 0 middle 0 middle

// extend table:
.dialogues-column
  width dialogues-column-width
  border-right width-border solid color3
  padding 0
.messages-column
  width messages-column-width
  padding 0

.dialogues-listing
  list-style-type none
  margin 0
  padding 0
  overflow-y scroll

.header
  padding middle
  padding-bottom middle*1.5
  background bg-color-1
  color color1
  box-shadow 0 4px 10px #2228
  z-index 0
.body
  color color2
  overflow-y scroll
.footer
  padding middle
  color color2
  background bg-color-1
  border-top width-border solid color3
  display none

.tool-dialogue
  padding middle
  box-shadow 0 5px 10px #222C
  min-height dialogue-preview-height

// --- Listing button:
.listing-button
  min-height dialogue-preview-height
  overflow hidden
  padding middle
  //border-top 1px solid color3
  border-bottom 1px solid color3
  background-color dialogue-color
  cursor pointer
  transition background-color ease 0.3s
  img
    float left
.listing-button:hover
  background dialogue-color-hover
.listing-button.active
  //border-top 1px solid color1
  border-bottom 1px solid color1
  background-color dialogue-color-active

.dialogue-text
  padding-left (middle-avatar-size + small)
.dialogue-body
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

