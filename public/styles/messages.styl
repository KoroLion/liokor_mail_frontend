// --- message-block:
.flex-filler
  flex 1

.message-block-full
  margin extra-small

.left-block
  text-align left
  margin-right 15%
.right-block
  text-align left
  margin-left 15%

.message-block
  border-radius small
  border-top-left-radius (middle-avatar-size/2)
  img
    float left
.message-block.not-your
  background message-bg-1
.message-block.your
  background message-bg-2

.message-block-title
  color color4
  width "calc(100% - %s - %s)" % (middle middle-avatar-size)
  margin-left middle-avatar-size + middle
  padding-top ((middle-avatar-size - 14px)/2)
  padding-bottom ((middle-avatar-size - 14px)/2)


.message-body
  color color2
  padding extra-small
  margin-left middle

.messages-footer
  svg
    margin-left small
    margin-right small

.message-input
  padding middle
  background bg-color-4
  color color2
  border-radius extra-small
  outline none
  flex 1
  font 400 15px Arial;

  border-width width-border
  border-style inset

  word-wrap break-word
  outline: 0;
  min-height: 30px;
  resize: none;
  max-height: 200px;
  overflow-y: auto;
  line-height: 17px;
.message-input::placeholder
  color color3
  transition color ease 0.4s
.message-input:focus::placeholder
  color color5


.svg-button
  cursor pointer
  overflow hidden
  opacity 0.8
  transition all 0.1s ease
.svg-button:hover
  opacity 1
  transform scale(1.1)


.add-button
  margin-right small
  overflow hidden
.add-button.switched > *
  transform translateY(-40px)

.plus-button
  display block
  vertical-align top
  background plus-bg-color
  transition all 0.5s ease-out
/*.plus-button:hover
  transform rotate(90deg)*/
.confirm-button
  display block
  vertical-align top
  background plus-bg-color
  transition all 0.5s ease-out


.find-input
  padding middle
  background bg-color-4
  color color2
  border-radius extra-small
  outline none

  border-width width-border
  border-style inset

  outline 0

.theme-input
  font-size 14px
  margin-bottom extra-small
  background #FFFFFF00
  border none
  outline none
  transition all ease 0.2s
  color color4
.theme-input:focus
  background bg-color-2
  color color3
.theme-input::placeholder
  transition all ease 0.2s
  color color4
.theme-input:focus::placeholder
  color color3